{
    "compilerOptions": {
        "target": "esnext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "baseUrl": "./src",
        "paths": {
          "*": [
            "types/*"
          ],
            "@core/*": ["./*"]
        }
    },
    "files": ["./src/index.ts"],
    "exclude": ["node_modules"],
    "typeRoots": [
        "node_modules/@types"
    ]
}
