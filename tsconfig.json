{
    "compilerOptions": {
        "outDir": "./dist",
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "baseUrl": "./src",
        "paths": {
            "@core/*": ["./*"]
        }
    },
    "files": ["./src/index.ts"],
    "exclude": ["node_modules"],
    "typeRoots": [
        "node_modules/@types"
    ]
}