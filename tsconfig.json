{
    "compilerOptions": {
        "target": "esnext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "baseUrl": "./src",
        "paths": {
            "@core/*": ["./*"],
            "@test/*": ["../test/*"]
        }
    },
    "files": [
        "./src/index.ts",
        "./src/config/configuredChai.ts",
        "./src/config/winston.ts"
    ],
    "exclude": ["node_modules"],
    "typeRoots": [
        "node_modules/@types"
    ]
}
